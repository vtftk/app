{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "module": "ESNext",
    "target": "ES2024",
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "noLib": true,
    "typeRoots": ["./types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/**/*", "node_modules/@types/jest/index.d.ts"],
  "exclude": ["dist"]
}
